<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Vehicle image -->
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/placeholderOutter"
                android:layout_height="@dimen/placeholderOutter"
                android:layout_marginTop="@dimen/placeholderMarginTop"
                android:layout_marginBottom="@dimen/placeholderMarginBottom"
                app:cardCornerRadius="@dimen/marginXL">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/placeholderInner"
                    android:layout_height="@dimen/placeholderInner"
                    android:layout_gravity="center"
                    app:cardCornerRadius="@dimen/marginXL">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/vd_iv_vehicleImage"
                        android:layout_width="@dimen/logoM"
                        android:layout_height="@dimen/logoM"
                        android:scaleType="fitXY"
                        android:src="@drawable/vehicle_placeholder" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <!-- Form card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/loginCardView"
                style="@style/Widget.Material3.CardView.Elevated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginS">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/empty_divider"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/marginS"
                    android:paddingTop="@dimen/placeholderMarginInfo"
                    android:paddingBottom="@dimen/marginM"
                    android:showDividers="middle">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/vd_it_brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/vehicleDetail_brand"
                        app:endIconDrawable="@drawable/icon_arrow_down"
                        app:endIconMode="custom">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/vd_it_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/vehicleDetail_model"
                        app:endIconDrawable="@drawable/icon_arrow_down"
                        app:endIconMode="custom">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/vd_it_plate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/vehicleDetail_plate">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/vehicleDetail_category">

                        <AutoCompleteTextView
                            android:id="@+id/vd_ac_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />

                        <!--                        <com.google.android.material.textfield.TextInputEditText
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content" />-->
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/vehicleDetail_available" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vehicleDetail_registrationDate" />

                    <CalendarView
                        android:id="@+id/vd_cv_registerDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <!-- Buttons -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/vd_bt_accept"
                        android:layout_width="@dimen/buttonL"
                        android:layout_height="wrap_content"
                        android:text="@string/accept"
                        app:icon="@drawable/icon_check" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/vd_bt_cancel"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="@dimen/buttonL"
                        android:layout_height="wrap_content"
                        android:text="@string/cancel"
                        app:icon="@drawable/icon_cancel" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>