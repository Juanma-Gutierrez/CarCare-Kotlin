<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/vd_la_isLoading"
        android:backgroundTint="@color/md_theme_light_primaryContainer"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="@dimen/logoL"
        android:layout_height="@dimen/logoL"
        app:cardCornerRadius="@dimen/marginXL">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/logoL"
            android:layout_height="@dimen/logoL"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            app:lottie_fileName="isLoading.json"
            app:lottie_loop="true" />
    </androidx.cardview.widget.CardView>
</LinearLayout>